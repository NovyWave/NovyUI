{
  "$schema": "https://tr.designtokens.org/format/",
  "$extensions": {
    "penpot": {
      "source": "NovyUI MoonZoon Implementation",
      "version": "1.0.0",
      "migrationDate": "2025-06-19"
    }
  },
  "opacity": {
    "none": {
      "$type": "number",
      "$value": 0,
      "$description": "Completely transparent"
    },
    "subtle": {
      "$type": "number",
      "$value": 0.04,
      "$description": "Subtle transparency"
    },
    "light": {
      "$type": "number",
      "$value": 0.08,
      "$description": "Light transparency"
    },
    "medium": {
      "$type": "number",
      "$value": 0.16,
      "$description": "Medium transparency"
    },
    "strong": {
      "$type": "number",
      "$value": 0.32,
      "$description": "Strong transparency"
    },
    "hover": {
      "$type": "number",
      "$value": 0.64,
      "$description": "Hover state opacity"
    },
    "disabled": {
      "$type": "number",
      "$value": 0.64,
      "$description": "Disabled state opacity"
    },
    "focus": {
      "$type": "number",
      "$value": 0.8,
      "$description": "Focus state opacity"
    },
    "opaque": {
      "$type": "number",
      "$value": 1.0,
      "$description": "Fully opaque"
    }
  }
}